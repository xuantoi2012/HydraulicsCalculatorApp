<UserControl x:Class="HydraulicsCalculatorApp.Views.ChartPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10" Grid.Row="0">
            <dx:SimpleButton Content="📊 Generate Chart" 
                           x:Name="btnGenerate"
                           Click="BtnGenerate_Click"
                           Margin="5"/>
            <dx:SimpleButton Content="🗑️ Clear" 
                           x:Name="btnClear"
                           Click="BtnClear_Click"
                           Margin="5"/>
            <TextBlock x:Name="txtChartInfo" 
                     VerticalAlignment="Center" 
                     Margin="10,0,0,0"
                     FontStyle="Italic"
                     Foreground="Gray"/>
        </StackPanel>

        <Border BorderBrush="LightGray" BorderThickness="1" Margin="10" Grid.Row="1">
            <Canvas x:Name="canvasChart" Background="White"/>
        </Border>
    </Grid>
</UserControl>